
page {
    background: #F4F4F4;
    height:100vh;
    box-sizing: border-box;
    overflow-x: hidden;
    overflow:hidden;
}


.container1 {
    overflow:hidden;
    width: 100%;
    height: 100vh;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    display: none;
    color:transparent;
}



.container1 .date {
    background: #FFFFFF;
    box-shadow: 0 0 0 0 rgba(178, 178, 178, 0.50);
    border-bottom: 1rpx solid #ccc;
    padding: 0 30rpx;
    background-image: linear-gradient(-90deg, #F0F0F0 0%, #FFFFFF 30%);
}
.container1 .date{
    position: relative;
}
.container1 .date .date-row::after{
    content: "";
    display: block;
    position: absolute;
    width:14rpx;
    box-shadow: 1px 1px 1px 82rpx rgba(240,240,240,.6);
    z-index: 1;
    right:0;
    top: 0;
}
.container1 .date scroll-view {
    height: 86rpx;
    width: 100%;
    white-space: nowrap;
    box-sizing: border-box;
    display: flex;
}

.container1 .date scroll-view .scroll {
    display: inline-block;
    height: 100%;
    width: 122rpx;
    box-sizing: border-box;
    margin-right: 18rpx;
}

.container1 .date scroll-view .scroll:last-child {
    margin-right: 0;
}

.container1 .date scroll-view .scroll view {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.40);
}

.container1 .cuisine {
    display: flex;
    flex-wrap: wrap;
    padding: 0 22rpx;
    justify-content: space-between;
    height: 1017.4rpx;
    /* width: 375px; */
    box-sizing: border-box;
}

.tablist-container {
    display: flex;
    width: 100vw;
    flex-wrap: wrap;
}

.tablist-container:last-child{
    padding-bottom: 60px;
}

.loading{
    width: 100%;
    height: 100rpx;
}

.demo0{
    height: 100rpx;
}

.canNotLoading{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100rpx;
}

.canNotLoading .text{
    font-size: 18px;
}