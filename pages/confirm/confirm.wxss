page{
    height:100vh;
    background: #F4F4F4;
}
.container1 {
    width: 100vw;
    padding-top: 24rpx;
}

.container1 .nav {
    background: #FFFFFF;
    box-shadow: inset 0 0 0 0 #E5E5E5, inset 0 0 0 0 #E5E5E5;
    width: 100vw;
    height: 220rpx;
    box-sizing: border-box;
}
.container1 .nav .input-value{
    margin-left:25.6rpx;
    height:110rpx;
    display:flex;
    align-items: center;
}
.container1 .nav .input-value:nth-child(1){
    border-bottom: 1rpx solid #E5E5E5;
}
.container1 .nav .input-value label {
    display: flex;
    align-items: center;
}

.container1 .nav .input-value label text {
    font-size: 32rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 32rpx;
    margin-right: 57.6rpx;
}

.container1 .nav .input-value label input {
    font-size: 32rpx;
    color: #B2B2B2;
    letter-spacing: 0;
    line-height: 32rpx;
}
.container1 .submit-btn{
    margin:40rpx 26rpx;
  }
  .container1  .submit-btn text {
    background: #1FCEB3;
    border-radius: 4px;
    color: #FFFFFF;
    font-size: 36rpx;
    letter-spacing: 0;
    margin:0px;
    width:698rpx;
    height:86rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }