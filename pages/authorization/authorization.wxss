.container1 .nav .logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height:575rpx;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 60rpx;
  margin-bottom: 8rpx;
}

.container1 .nav .logo .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #1FCEB3;
  box-sizing: border-box;
  padding: 20rpx;
}

.container1 .nav .logo .img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.container1 .nav .logo text {
  font-size: 36rpx;
  color: #000000;
  line-height: 50rpx;
  margin-top: 12rpx;
}

.container1 .login .btn-row {
  display: flex;
  justify-content: center;
}

.container1 .login .btn-row .login-btn {
  background: #1FCEB3;
  border-radius: 4px;
  width: 660rpx;
  height: 86rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 4rpx;
  font-weight: normal;
}

.container1 .login .btn-row .login-btn text {
  font-size: 36rpx;
  color: #FFFFFF;
  line-height: 50rpx;
  font-weight: normal;
}

.container1 .login .phone-login {
  font-size: 28rpx;
  color: #5C5C5C;
  text-align: center;
  margin-bottom:28rpx;
  letter-spacing: 1rpx;
  line-height: 40rpx;
  
}