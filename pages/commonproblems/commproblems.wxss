/* pages/commonproblems/commproblems.wxss */
page {
  background-color: #F4F4F4;
}

.container {
  height: 554px;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background-color: #F4F4F4;
}

.problems-container {
  position: absolute;
  top: 13px;
  width: 100vw;
}

.problems-tab {
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
}

.problems-text-container-1 {
  margin-left: 14.1px;
  height: 100%;
  width: 175.8px;
  line-height: 50px;
}

.icon-1 {
  width: 175.8px;
  height: 100%;
  position: relative;
  margin-right: 16.3px;
}

.icon-1 image {
  position: absolute;
  right: 5px;
  bottom: 16.7px;
  width: 5.7px;
  height: 10px;
}

.call {
  width: 100vw;
  height: 49px;
  border-top: 0.5px solid #E4E4E4;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.call .call-btn {
  width: 32vw;
  height: 30px;
  /* text-align: center; */
  background: #1FCEB3;
  border-radius: 2.5px;
  display:flex;
  justify-content: center;
  align-items: center;
}

.call .call-btn .call-text {
  font-size: 14px;
  color: #ffffff;
}